<MapboxGl
  @id="census-tracts-map"
  @name="census-tracts-map"
  @initOptions={{hash
    style='https://layers-api-staging.planninglabs.nyc/v1/base/style.json'
    zoom=12
    center=this.project.transportationAnalysis.jtwStudyAreaCentroid
  }}
  as |map|
>
  <CartoVectorLayer
    @id="bbls"
    @map={{map.instance}}
    @source={{carto-source-geojson project.bblsGeojson}}
    @viz={{carto-viz (get-layer-style 'bbls' 'paint')}}
  />

  <CartoVectorLayer
    @id="subway-routes"
    @map={{map.instance}}
    @source={{carto-source-sql "select * from mta_subway_routes_v0"}}
    @viz={{carto-viz (get-layer-style 'subway-routes' 'paint')}}
  />

</MapboxGl>
