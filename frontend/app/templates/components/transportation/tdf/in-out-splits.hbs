<div class="sixteen wide column">
  <h3 class="ui header" style="margin-bottom: 10px">In/Out Splits</h3>
</div>

<div class="eight wide column">
  <table class="ui celled table">
    <thead>
      <tr>
        <th class="two wide">Day</th>
        <th class="two wide">In</th>
        <th class="two wide">Out</th>
      </tr>
    </thead>
    <tbody class="ui form">
      <Transportation::Tdf::InOutSplits::TableRow @data={{data.am}} @model={{model}} @label="AM" data-test-in-out-split="am"/>
      <Transportation::Tdf::InOutSplits::TableRow @data={{data.md}} @model={{model}} @label="Midday" />
      <Transportation::Tdf::InOutSplits::TableRow @data={{data.pm}} @model={{model}} @label="PM" />
      <Transportation::Tdf::InOutSplits::TableRow @data={{data.saturday}} @model={{model}} @label="Saturday" />
    </tbody>
  </table>
</div>
