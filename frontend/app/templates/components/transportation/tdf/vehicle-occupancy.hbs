<div class="sixteen wide column">
  <h3 class="ui header" style="margin-bottom: 10px">Vehicle Occupancy</h3>
</div>

<div class="eight wide column">
  <table class="ui celled table">
    <thead>
      <tr>
        <th class="three wide">Mode</th>
        <th class="three wide">All Periods</th>
      </tr>
    </thead>
    <tbody class="ui form">
      <tr>
        <td>{{mode-label 'auto'}}</td>
        <td class="vehicle-occupancy--auto">
          {{input type="number" step=".01" min="0" value=vehicleOccupancy.auto.allPeriods}}

          {{#if (not factor.manualModeSplits)}}
            <UiPopup @content="Average calculated using selected Census Tracts">
              <div class="ui basic blue label"> 
                {{factor.censusTractsCalculator.autoVehicleOccupancy}}
                
                <div class="detail"><i class="icon question circle"></i></div>
              </div>
            </UiPopup>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>{{mode-label 'taxi'}}</td>
        <td>{{input type="number" step=".01" min="0" value=vehicleOccupancy.taxi.allPeriods}}</td>
      </tr>
      <tr>
        <td colspan="3">
          <div class="ui blue button right floated" onClick={{action saveFactor}}>
            Save
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <Transportation::Tdf::TableNote 
            @tableName="vehicleOccupancy"
            @factor={{factor}}
          />
        </td>
      </tr>
    </tbody>
  </table>
</div>
